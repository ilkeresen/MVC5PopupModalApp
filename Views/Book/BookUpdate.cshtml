@model MVC5Library.Models.TBLBook
@{
    ViewBag.Title = "BookUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="card">
            <div class="card card-gray-dark">
                <div class="card-header">
                    <h3 class="card-title"><i class="fas fa-edit"></i> Kitap Güncelle</h3>
                </div>
            </div>
            @using (Html.BeginForm("BookUpdate", "Book", FormMethod.Post))
            {
                <div class="card-body">
                        @Html.HiddenFor(x=>x.BookID)
                    <div class="form-group">
                        <label for="BookName">Kitap Ad</label>
                        @Html.TextBoxFor(x => x.BookName, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label for="BookCategory">Kitap Kategori</label>
                        @Html.DropDownListFor(x => x.BookCategory, (List<SelectListItem>)ViewBag.Category, "Kategori Seçiniz", new { @id = "BookCategory", @class = "form-control select2" })
                    </div>

                    <div class="form-group">
                        <label for="BookAuthor">Kitap Yazar</label>
                        @Html.DropDownListFor(x => x.BookAuthor, (List<SelectListItem>)ViewBag.Author, "Yazar Seçiniz", new { @id = "BookAuthor", @class = "form-control select2" })
                    </div>

                    <div class="form-group">
                        <label for="BookPublicationYear">Kitap Basım Yıl</label>
                        @Html.TextBoxFor(x => x.BookPublicationYear, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label for="BookPublisher">Kitap Yayınevi</label>
                        @Html.TextBoxFor(x => x.BookPublisher, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label for="BookPageNumber">Kitap Sayfa Sayı</label>
                        @Html.TextBoxFor(x => x.BookPageNumber, new { @class = "form-control" })
                    </div>

                </div>
                <div class="card-body">
                    <button type="submit" class="btn btn-dark"><i class="fas fa-folder-plus"></i> Kitap Güncelle</button>
                </div>
            }
            </div>
    </div><!-- /.container-fluid -->
</section>
